  "automation_readiness_assessment": {
    "technical_readiness": {
      "weight": 0.3,
      "factors": {
        "data_quality": {
          "description": "Clean, structured data availability",
          "score_range": "1-10",
          "benchmarks": {
            "1-3": "Poor data quality, significant cleansing required",
            "4-6": "Moderate data quality, some cleansing needed",
            "7-8": "Good data quality, minimal cleansing required",
            "9-10": "Excellent data quality, automation-ready"
          }
        },
        "system_integration": {
          "description": "API availability and integration maturity",
          "score_range": "1-10",
          "benchmarks": {
            "1-3": "Limited APIs, manual integration required",
            "4-6": "Some APIs available, moderate integration complexity",
            "7-8": "Well-documented APIs, straightforward integration",
            "9-10": "Comprehensive API ecosystem, seamless integration"
          }
        },
        "infrastructure_stability": {
          "description": "Platform reliability and performance",
          "score_range": "1-10",
          "benchmarks": {
            "1-3": "Frequent outages, poor performance",
            "4-6": "Occasional issues, acceptable performance",
            "7-8": "Stable platform, good performance",
            "9-10": "Highly reliable, excellent performance"
          }
        },
        "security_framework": {
          "description": "Compliance and governance capabilities",
          "score_range": "1-10",
          "benchmarks": {
            "1-3": "Basic security, compliance gaps",
            "4-6": "Standard security, some compliance coverage",
            "7-8": "Strong security, good compliance framework",
            "9-10": "Enterprise security, comprehensive compliance"
          }
        }
      }
    },
    "process_readiness": {
      "weight": 0.35,
      "factors": {
        "process_standardization": {
          "description": "Documented, consistent procedures",
          "score_range": "1-10",
          "benchmarks": {
            "1-3": "Ad-hoc processes, minimal documentation",
            "4-6": "Some standardization, basic documentation",
            "7-8": "Well-standardized, comprehensive documentation",
            "9-10": "Fully standardized, automation-ready procedures"
          }
        },
        "volume_frequency": {
          "description": "Transaction volume and regularity",
          "score_range": "1-10",
          "benchmarks": {
            "1-3": "Low volume, irregular frequency",
            "4-6": "Moderate volume, somewhat regular",
            "7-8": "High volume, regular frequency",
            "9-10": "Very high volume, consistent frequency"
          }
        },
        "rule_based_nature": {
          "description": "Degree of structured decision making",
          "score_range": "1-10",
          "benchmarks": {
            "1-3": "Primarily judgment-based decisions",
            "4-6": "Mix of rules and judgment",
            "7-8": "Mostly rule-based with some exceptions",
            "9-10": "Completely rule-based, clear logic"
          }
        },
        "exception_handling": {
          "description": "Frequency and complexity of edge cases",
          "score_range": "1-10",
          "benchmarks": {
            "1-3": "Frequent, complex exceptions",
            "4-6": "Moderate exceptions, manageable complexity",
            "7-8": "Few exceptions, well-defined handling",
            "9-10": "Minimal exceptions, automated handling possible"
          }
        }
      }
    },
    "organizational_readiness": {
      "weight": 0.35,
      "factors": {
        "executive_sponsorship": {
