        },
        "budget_timeline": {
          "description": "Adequate resource allocation",
          "score_range": "1-10",
          "benchmarks": {
            "1-3": "Insufficient budget and unrealistic timeline",
            "4-6": "Constrained budget, tight timeline",
            "7-8": "Adequate budget, reasonable timeline",
            "9-10": "Generous budget, flexible timeline"
          }
        }
